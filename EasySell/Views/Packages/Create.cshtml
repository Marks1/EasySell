@model EasySell.Models.NewPackageViewModel


@{
    Layout = "~/Views/Shared/_Layout.cshtml";
}
<div class="">
    <div class="page-title">
        <div class="title_left">
            <h3>New Package</h3>
        </div>
    </div>
    <div class="clearfix"></div>
    <div class="row">
        <div class="col-md-12 col-sm-12 col-xs-12">
            <div class="x_panel">
                <div class="x_title">
                    <h2>Information <small></small></h2>
                    <div class="clearfix"></div>
                </div>
                <div class="x_content">
                    <br />
                    @using (Html.BeginForm("Create", "Packages", FormMethod.Post, new { @class = "form-horizontal form-label-left" }))
                    {
                        @Html.AntiForgeryToken()
                        @Html.HiddenFor(model => model.OrderID)
                        <div class="form-group">
                            <label class="control-label col-md-3 col-sm-3 col-xs-12">Deliver</label>
                            <div class="col-md-6 col-sm-6 col-xs-12">
                                <div id="deliver" class="btn-group" data-toggle="buttons">
                                    @foreach(var deliver in Model.AllPackageDelivers )
                                    {
                                        <label class="btn btn-default" data-toggle-class="btn-primary" data-toggle-passive-class="btn-primary">
                                            @Html.RadioButtonFor(m => m.SelectedDeliverID, deliver.Id)
                                            @Html.DisplayFor(modelItem => deliver.ProviderName)
                                        </label>                                   
                                    }
                                </div>
                            </div>
                        </div>
                        <div class="form-group">
                            <label class="control-label col-md-3 col-sm-3 col-xs-12" for="priority">
                                Priority <span class="required">*</span>
                            </label>
                            <div class="col-md-6 col-sm-6 col-xs-12">
                                @Html.EditorFor(model => model.SerialNumber, new { htmlAttributes = new { @class = "form-control has-feedback-left" } })
                                <span class="fa fa-user form-control-feedback left" aria-hidden="true"></span>
                            </div>
                        </div>
                        <div class="ln_solid"></div>
                        <div class="form-group">
                            <div class="col-md-6 col-sm-6 col-xs-12 col-md-offset-3">
                                <a href="@Url.Action("ProcessOrder", "Orders", new { id = Model.OrderID })" class="btn btn-primary"> Cancel</a>
                                <button type="submit" class="btn btn-success">Create</button>
                            </div>
                        </div>
                    }
                </div>
            </div>
        </div>
    </div>
</div>
