@model IEnumerable<EasySell.Models.CustomerViewModel>

@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/_Layout.cshtml";
}



<p>
    @Html.ActionLink("Create New", "Create")
</p>
<div class="">
    <div class="page-title">
        <div class="title_left">
            <h3>我的客户</h3>
        </div>

        <div class="title_right">
            <div class="col-md-5 col-sm-5 col-xs-12 form-group pull-right top_search">
                <div class="input-group">
                    <input type="text" class="form-control" placeholder="Search for...">
                    <span class="input-group-btn">
                        <button class="btn btn-default" type="button">Go!</button>
                    </span>
                </div>
            </div>
        </div>
    </div>
    <div class="clearfix"></div>
    <div class="row">
        <div class="col-md-12">
            <div class="x_panel">
                <div class="x_content">
                    <div class="row">
                        @foreach (var item in Model)
                        {
                            <div class="col-md-4 col-sm-4 col-xs-12 profile_details">
                                <div class="well profile_view">
                                    <div class="col-sm-12">
                                        @if (item.CustomerInfo.IsActive == 1)
                                        {
                                            <h4 class="brief"><i>Active</i></h4>
                                        }
                                        else
                                        {
                                            <h4 class="brief"><i>Inactive</i></h4>
                                        }
                                        <div class="left col-xs-7">
                                            <h2>@item.CustomerInfo.Name</h2>
                                            <p><strong>Created: </strong>@item.CustomerInfo.CreateAt</p>
                                            <br/>
                                            <ul class="list-unstyled">
                                                <li><i class="fa fa-building"></i> Address: @item.CustomerInfo.Address</li>
                                                
                                                <li><i class="fa fa-phone"></i> Phone #: @item.CustomerInfo.Phone</li>
                                            </ul>
                                        </div>
                                        <div class="right col-xs-5 text-center">
                                            <img src="~/Static/image/user/@item.CustomerInfo.Picture" alt="" class="img-circle img-responsive">
                                        </div>
                                    </div>
                                    <div class="col-xs-12 bottom text-center">
                                        <div class="col-xs-12 col-sm-6 emphasis">
                                            <p class="ratings">
                                                
                                                @for (var i = 0; i < 5; i++)
                                                {
                                                    if (i < item.Rating)
                                                    {
                                                        <a href="#"><span class="fa fa-star"></span></a>
                                                    }
                                                    else
                                                    {
                                                        <a href="#"><span class="fa fa-star-o"></span></a>
                                                    }
                                                }                                                
                                            </p>
                                        </div>
                                        <div class="col-xs-12 col-sm-6 emphasis">
                                            <a href="@Url.Action("Edit", "Customers", new { id = item.CustomerInfo.Id })" class="btn btn-success btn-xs"><i class="fa fa-user"></i> Edit </a>
                                                
                                            <a href="@Url.Action("Details", "Customers", new { id = item.CustomerInfo.Id })" class="btn btn-primary btn-xs"><i class="fa fa-user"></i> View Profile </a>
                                            
                                        </div>
                                    </div>
                                </div>
                            </div>
                        }
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>