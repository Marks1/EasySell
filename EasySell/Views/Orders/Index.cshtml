@model IEnumerable<EasySell.Models.Order>

@{
    ViewBag.Title = "Orders";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h2>Index</h2>

<p>
    @Html.ActionLink("Create New", "Create")
</p>


<div class="">
    <div class="page-title">
        <div class="title_left">
            <h3>Order <small>Active</small></h3>
        </div>
        <div class="title_right">
            <div class="col-md-5 col-sm-5 col-xs-12 form-group pull-right top_search">
                <div class="input-group">
                    <input type="text" class="form-control" placeholder="Search for...">
                    <span class="input-group-btn">
                        <button class="btn btn-default" type="button">Go!</button>
                    </span>
                </div>
            </div>
        </div>
    </div>

    <div class="clearfix"></div>
    <div class="row">
        <div class="col-md-12">
            <div class="x_panel">
                <div class="x_title">
                    <h2>Order</h2>
                    <ul class="nav navbar-right panel_toolbox">
                        <li>
                            <a class="collapse-link"><i class="fa fa-chevron-up"></i></a>
                        </li>
                        <li class="dropdown">
                            <a href="#" class="dropdown-toggle" data-toggle="dropdown" role="button" aria-expanded="false"><i class="fa fa-wrench"></i></a>
                            <ul class="dropdown-menu" role="menu">
                                <li>
                                    <a href="#">Settings 1</a>
                                </li>
                                <li>
                                    <a href="#">Settings 2</a>
                                </li>
                            </ul>
                        </li>
                        <li>
                            <a class="close-link"><i class="fa fa-close"></i></a>
                        </li>
                    </ul>
                    <div class="clearfix"></div>
                </div>
                <div class="x_content">
                    <p>Actice Orders</p>
                    <!-- start project list -->
                    <table class="table table-striped projects">
                        <thead>
                            <tr>
                                <th style="width: 1%">#</th>
                                <th style="width: 20%">Customer Name</th>
                                <th>Priority</th>
                                <th>Progress</th>
                                <th>Status</th>
                                <th style="width: 40%">#Edit</th>
                            </tr>
                        </thead>
                        <tbody>
                        @foreach (var item in Model)
                        {
                            <tr>
                                <td>@Html.DisplayFor(modelItem => item.Id)</td>
                                <td>
                                    <a>@Html.DisplayFor(modelItem => item.customerID)</a>
                                    <br />
                                    @if (item.IsActive == 1)
                                    { 
                                    <small>Created @Html.DisplayFor(modelItem => item.order_createtime)</small>
                                    }
                                    else
                                    {
                                        <small>Closed @Html.DisplayFor(modelItem => item.order_closetime)</small>
                                    }
                                </td>
                                
                                <td>@Html.DisplayFor(modelItem => item.Priority)</td>
                                <td class="project_progress">
                                    <div class="progress progress_sm">
                                        <div class="progress-bar bg-green" role="progressbar" data-transitiongoal="@(item.StatusID * 25)"></div>
                                    </div>
                                    <small>@(item.StatusID * 25)% Complete</small>
                                </td>
                                <td>
                                    @if (item.IsActive == 1)
                                    {
                                        <button type="button" class="btn btn-success btn-xs">Processing</button>
                                    }
                                    else
                                    {
                                        <button type="button" class="btn btn-default btn-xs">Complete</button>
                                    }                                    
                                </td>
                                <td>
                                    @Html.ActionLink("Edit", "Edit", new { id = item.Id }) |
                                    @Html.ActionLink("Delete", "Delete", new { id = item.Id }) |               
                    
                                    <a href="@Url.Action("PutOrder", "Orders", new { id = item.Id })" class="btn btn-primary btn-xs"><i class="fa fa-folder"></i> 下单 </a>
                                    <a href="@Url.Action("MapOrder", "MapOrder", new { id = item.Id })" class="btn btn-info btn-xs"><i class="fa fa-pencil"></i> 配货 </a>
                                    <a href="@Url.Action("Delivery", "Delivery", new { id = item.Id })" class="btn btn-danger btn-xs"><i class="fa fa-trash-o"></i> 发货 </a>
                                    <a href="@Url.Action("Receipts", "Orders", new { id = item.Id })" class="btn btn-primary btn-xs"><i class="fa fa-folder"></i> 发票 </a>
                                </td>
                            </tr>
                        }
                        </tbody>
                    </table>
                    <!-- end project list -->
                </div>
            </div>
        </div>
    </div>
</div>
