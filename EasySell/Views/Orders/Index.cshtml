@model IEnumerable<EasySell.Models.OrderViewModel>

@{
    Layout = "~/Views/Shared/_Layout.cshtml";
}


<p>
    @Html.ActionLink("Create New Order", "Create");
</p>


<div class="">
   
    <div class="page-title">
        <div class="title_left">
            <h3>订单 <small>@ViewBag.SubTitle</small></h3>
        </div>
        <div class="title_right">
            <div class="col-md-5 col-sm-5 col-xs-12 form-group pull-right top_search">
                <div class="input-group">
                    <input type="text" class="form-control" placeholder="Search for...">
                    <span class="input-group-btn">
                        <button class="btn btn-default" type="button">Go!</button>
                    </span>
                </div>
            </div>
        </div>
    </div>

    <div class="clearfix"></div>
    <div class="row">
        <div class="col-md-10 col-sm-10 col-xs-12">
            <div class="x_panel">
                <div class="x_content">                   

                    <table class="table table-striped projects">
                                    <thead>
                                        <tr>
                                            <th style="width: 1%">Priority</th>
                                            <th style="width: 15%">Customer</th>
                                            <th style="width: 15%">Order #</th>
                                            <th style="width: 15%">Payment Status</th>
                                            <th style="width: 15%">Shipping Status</th>
                                            <th style="width: 15%">Amount</th>
                                            <th style="width: 20%">Action</th>
                                        </tr>
                                    </thead>
                                    <tbody>
                                        @foreach (var item in Model)
                                        {                                            
                                            <tr>
                                                <td>@Html.DisplayFor(modelItem => item.OrderInfo.Priority)</td>
                                                <td>
                                                    <a href="#">@Html.DisplayFor(modelItem => item.CustomerName)</a>
                                                    
                                                </td>
                                                <td>
                                                    <a href="@Url.Action("ProcessOrder", "Orders", new { id = item.OrderInfo.Id })"> @Html.DisplayFor(modelItem => item.OrderNumber) </a>
                                                    <br />
                                                    <small>@Html.DisplayFor(modelItem => item.OrderInfo.order_createtime)</small>
                                                </td>
                                                <td>
                                                    @if (item.OrderInfo.IsPaid == 1)
                                                    {
                                                        <button type="button" class="btn btn-success btn-xs">Paid</button>
                                                    }

                                                </td>
                                                <td>
                                                    @if (item.OrderInfo.IsShipped == 1)
                                                    {
                                                        <button type="button" class="btn btn-success btn-xs">Shipped</button>
                                                    }

                                                </td>
                                                <td>
                                                    <a>￥ @Html.DisplayFor(modelItem => item.OrderTotalPrice)</a>
                                                    <br />
                                                    <small>Qty: @Html.DisplayFor(modelItem => item.OrderedGoodQty)</small>
                                                </td>
                                                <td>
                                                    @Html.ActionLink("Edit", "Edit", new { id = item.OrderInfo.Id }) |
                                                    @Html.ActionLink("Delete", "Delete", new { id = item.OrderInfo.Id })
                                                    <a href="@Url.Action("Invoice", "Orders", new { id = item.OrderInfo.Id })" class="btn btn-primary btn-xs"><i class="fa fa-folder"></i> 发票 </a>
                                                </td>
                                            </tr>
                                        }
                                    </tbody>
                                </table>
                                <!-- end project list -->
                </div>
            </div>
        </div>
        <div class="col-md-2 col-sm-2 col-xs-12">
            <div class="x_panel">
                <div class="x_content">
                    <a href="@Url.Action("Index", "Orders", new { status = 1 })" class="btn btn-primary btn-xs"> Processing</a> (@ViewBag.ProcessingOrders)
                    <br />
                    <a href="@Url.Action("Index", "Orders", new { status = 0 })" class="btn btn-primary btn-xs"> Completed</a> (@ViewBag.CompletedOrders)
                    <br />
                    <a href="@Url.Action("Index", "Orders", new { status = 2 })" class="btn btn-primary btn-xs"> Waiting for Shipping</a> (@ViewBag.WaitforShippingOrders) 
                    <br />
                    <a href="@Url.Action("Index", "Orders", new { status = 3 })" class="btn btn-primary btn-xs"> Unpaied</a> (@ViewBag.UnpaiedOrders)
                </div>
            </div>
        </div>
        <div class="clearfix"></div>
    </div>
</div>
